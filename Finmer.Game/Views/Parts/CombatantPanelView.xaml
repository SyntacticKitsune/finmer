<UserControl
    x:Class="Finmer.Views.CombatantPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:v="clr-namespace:Finmer.Views"
    xmlns:m="clr-namespace:Finmer.Models"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="240"
    d:DataContext="{d:DesignInstance m:GameUI}">
    <Grid Background="{StaticResource BackgroundBrush}" Margin="12">
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Style.Triggers>
                    <!-- Sliding animation when opening and closing panel -->
                    <DataTrigger Binding="{Binding IsInCombat}" Value="True">
                        <DataTrigger.EnterActions>
                            <!-- Enter animation -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                                        From="-250" To="0" Duration="0:0:0.45">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <!--<DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        EasingFunction="{StaticResource SlideEasingIn}"
                                        From="0" To="1" Duration="{StaticResource SlideDuration}" />-->
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                                        BeginTime="0:0:1"
                                        From="0" To="-250" Duration="0:0:0.65">
                                        <DoubleAnimation.EasingFunction>
                                            <BackEase Amplitude="0.22" EasingMode="EaseIn" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <!--<DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        EasingFunction="{StaticResource SlideEasingOut}"
                                        BeginTime="0:0:1"
                                        From="1" To="0" Duration="{StaticResource SlideDuration}" />-->
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.RenderTransform>
            <TranslateTransform X="-500" />
        </Grid.RenderTransform>

        <!-- Combatants list -->
        <ItemsControl ItemsSource="{Binding CombatStateViewModel.Participants}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <v:CombatantListItemView
                        DataContext="{TemplateBinding Content}"
                        Margin="0,0,12,12" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>